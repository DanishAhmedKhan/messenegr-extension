{
    "manifest_version": 2,
    "name": "Messenger extension",
    "short_name": "MessEx",
    "version": "0.1",
    "author": "Danish Ahmed Khan",
    "description": "Pepper is a Facebook Messenger CRM extension",
    "permissions": [
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        },
        "default_title": "Popup"
    },
    "content_scripts": [
        {
            "matches": [ 
                "*://*.facebook.com/messages/*", 
                "*://*.facebook.com/*/inbox/*", 
                "*://*.messenger.com/*" 
            ],
            "js": [
                "jquery.js", 
                "arrive.js", 
                "dexie.js", 
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "jquery.js", 
            "background.js"
        ],
        "persistent": false
    },
    "web_accessible_resources": [
        "images/send.png"
    ]
}