{
    "manifest_version": 2,
    "name": "Messenger extension",
    "version": "0.1",
    "permissions": [
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        },
        "default_title": "Popup"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["jquery.js", "arrive.js", "content.js"]
        }
    ],
    "background": {
        "scripts": ["jquery.js", "background.js"],
        "persistent": false
    }
}